{
  "exclude": ["build", "node_modules", "src/code-system/cts-metadata.json"],
  "include": ["src"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2017",
    "lib": ["ESNext"],
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "ts-node": {
    "files": true
  }
}
