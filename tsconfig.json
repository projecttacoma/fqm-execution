{
  "exclude": ["build", "node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2017",
    "lib": ["ESNext"],
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  }
}
